//Author: Experience
//This will drop all gold to beetle when overweight

if not findalias 'mount'
  useobject 'self'
  promptalias 'mount'
endif

while weight >= maxweight
  if mounted 'self'
    useobject 'self'
    pause 1000
    movetype '0xeed' 'backpack' 'mount'
    pause 1000
    @useobject 'mount'
  elseif not mounted
    pause 1000
    movetype '0xeed' 'backpack' 'mount'
    @useobject 'mount'
  endif
endwhile
