if skill 'begging' < 100 

  getfriend 'friend' 'innocent' 'closest' 

  useskill 'begging' 

  waitfortarget 2000 

  target! 'found' 

  pause 13000 

else 

  headmsg 'Begging complete!' 

  stop 

endif
